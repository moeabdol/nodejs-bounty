<p class="h2 mb-3">Tasks</p>

{{#each tasks as |task|}}
  <div class="card p-3">
    <div class="media">
      <div class="mr-5 ml-3 text-center">
        <p class="h2">{{task.bounty}}</p>
        <p>Bounty Points</p>
      </div>

      <div class="media-body">
        <a href="#" class="m-0">
          <h5 class="card-title">{{task.title}}</h5>
        </a>
        <p class="card-text m-0 mb-2">{{task.description}}</p>
        <p class="card-text m-0"><small>Instances: {{task.instances}}</small></p>
        <span class="badge badge-success px-2 py-1">
          {{task.status}}
        </span>
      </div>
    </div>
  </div>
{{/each}}
